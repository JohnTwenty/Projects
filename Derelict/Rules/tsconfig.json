{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "derelict-boardstate": ["../BoardState/src/core/types"],
      "derelict-players": ["../Players/src"]
    }
  },
  "include": ["src", "tests", "types"],
  "exclude": ["dist"]
}
